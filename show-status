use strict;
use warnings;

while ( 1 ) {

    print "Status:\n";

    for my $n ( 1 .. 5 ) {
        if ( -e "/tmp/testenv_step-${n}_done" ) {
            print "(done)";
        } elsif ( -e "/tmp/testenv_step-${n}_wip" ) {
            print "(wip) ";
        } else {
            print "      ";
        }
        print "   ";
        print "Step $n\n";
    }

    sleep 1;

}
